@{
    ViewData["Title"] = "Home";
}

<main class="container mt-4">

    <h3>Bem-vindo ao SAT</h3>
    <p>Selecione uma opção no menu acima.</p>

    @if (User.HasClaim("Perfil", "ADMIN"))
    {
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Administração de Usuários</h5>
                <p class="card-text">Como administrador você pode cadastrar, alterar e excluir usuários.</p>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary" href="/Usuario/Create">Cadastrar Usuário</a>
                    <a class="btn btn-secondary" href="/Usuario">Listar / Alterar / Excluir Usuários</a>
                </div>
            </div>
        </div>
    }

</main>
