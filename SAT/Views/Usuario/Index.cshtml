@model IEnumerable<SAT.Models.Usuario>
@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">Controle de Usuários</h4>

        <button class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#modalUsuario"
                onclick="abrirModalCriar()">
            <i class="bi bi-plus-lg"></i> Novo Usuário
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Perfil</th>
                        <th width="150" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Nome</td>
                            <td>@u.Email</td>
                            <td>@u.Perfil</td>

                            <td class="text-center">

                                <button class="btn btn-sm btn-outline-primary"
                                        onclick="abrirModalEditar('@u.Id', '@u.Nome', '@u.Email', '@u.Perfil')">
                                    <i class="bi bi-pencil-square"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="excluirUsuario(@u.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-warning"
                                        onclick="resetarSenha(@u.Id)">
                                    <i class="bi bi-key"></i>
                                </button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>

<!-- MODAL-->
<div class="modal fade" id="modalUsuario" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="tituloModalUsuario">Novo Usuário</h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <form id="formUsuario" method="post">
                <div class="modal-body">

                    <input type="hidden" id="Id" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" id="Nome" name="Nome" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Perfil</label>
                        <select id="Perfil" name="Perfil" class="form-control">
                            <option value="ADMIN">ADMIN</option>
                            <option value="USER">USER</option>
                        </select>
                    </div>

                    <div id="areaResetSenha" class="alert alert-warning d-none">
                        A senha será resetada para <b>"1234"</b> ao salvar.
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>

            </form>
        </div>
    </div>
</div>


