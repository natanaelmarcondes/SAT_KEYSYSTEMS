@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center" style="height:100vh;">
        <div class="row w-100 align-items-center" style="max-width:980px;">

            <!-- Banner à esquerda (visível em md+) -->
            <div class="col-md-6 d-none d-md-flex justify-content-center">
                <img src="@Url.Content("~/imagens/banner.jpg")" class="img-fluid rounded" alt="Banner" style="max-height:420px; object-fit:cover;" />
            </div>

            <!-- Card de login à direita -->
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <div class="card shadow p-4" style="width:360px;">

                    <!-- Logo acima dos inputs -->
                    <div class="text-center mb-3">
                        <img src="@Url.Content("~/imagens/logo.jpg")" alt="Logo" class="img-fluid" style="max-height:80px;" />
                    </div>

                    <h4 class="text-center mb-3">SAT - Login</h4>

                    @if (ViewBag.Erro != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Erro</div>
                    }

                    <form method="post" action="/Login/Entrar">
                        <input type="email" name="email" class="form-control mb-3" placeholder="Email" required />
                        <input type="password" name="senha" class="form-control mb-3" placeholder="Senha" required />
                        <button class="btn btn-primary w-100">Entrar</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
