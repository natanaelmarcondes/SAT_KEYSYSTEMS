@model IEnumerable<SAT.Models.Produto>

@{
    ViewData["Title"] = "Consulta de Produtos";
}

<div class="container mt-4">
    <h1 class="mb-4">Consulta de Produtos</h1>

    <form method="get" class="row g-3 mb-4">

        <div class="col-md-3 col-12">
            <label class="form-label">Buscar por</label>
            <select name="tipoBusca" class="form-select">
                <option value="descricao" selected>Descrição</option>
                <option value="codigo">Código</option>
                <option value="codigobarras">Código de Barras</option>
            </select>
        </div>

        <div class="col-md-5 col-12">
            <label class="form-label">Termo</label>
            <input type="text" name="termo" value="@ViewBag.Termo" class="form-control" placeholder="Digite para buscar..." />
        </div>

        <div class="col-md-2 col-12">
            <label class="form-label">&nbsp;</label>
            <button class="btn btn-primary w-100">
                Buscar
            </button>
        </div>

    </form>

    <hr />

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Código</th>
                    <th>Descrição</th>
                    <th>Descrição Busca</th>
                    <th>Cód.Barras</th>
                    <th style="width: 60px; text-align:center;">Anexo</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.prd_Codigo</td>
                            <td>@p.prd_Descri</td>
                            <td>@p.prd_DesBus</td>
                            <td>@p.prd_CodBar</td>

                            <td class="text-center">
                                <a href="@Url.Action("Anexo", "Produtos", new { codigo = p.prd_Codigo })"
                                   title="Ver Anexos">
                                    <i class="bi bi-search" style="font-size: 1.5rem;"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Nenhum produto encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- SPINNER E SCRIPTS -->
<style>
    #loadingSpinner {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: none;
        z-index: 2000;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>

<div id="loadingSpinner">
    <div class="spinner-border text-primary" style="width:3rem; height:3rem;" role="status"></div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const spinner = document.getElementById("loadingSpinner");
        spinner.style.display = "block";

        window.onload = function () {
            setTimeout(() => spinner.style.display = "none", 200);
        };
    });
</script>
